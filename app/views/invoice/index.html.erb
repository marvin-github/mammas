<div class="container">
  <h1>Listing Invoices</h1>

  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>Date</th>
        <th>Merchant</th>
      </tr>
      </thead>
      <tbody>
      <% @invoice.each do |i| %>
          <tr>
            <td><%= i.start_date.strftime("%Y-%m-%d") %></td>
            <td><%= i.merchant.merchant_name %></td>

            <td><%= link_to 'Show', invoice_path(i) %></td>
            <td><%= link_to 'Edit', edit_invoice_path(i) %></td>
            <td><%= link_to 'Delete', invoice_path(i), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'Download', invoice_download_path(format: "csv")  %>
  </div>

</div>

<br>




<div class="container">
  <h4><%= @invoice.merchant.merchant_name %></h4>
  <h4>Store #: <%= @invoice.merchant.store_number%></h4>
  <h4>Invoice #: <%= @invoice.id%> </h4>
  <h4><%= @invoice.merchant.address1 %></h4>
  <h7><%= @invoice.start_date.strftime("Created on %m/%d/%Y") %></h7>




  <div class="table-responsive", class="table table-striped">
    <table class="table">
      <thead>
      <tr>
        <th>Upc</th>
        <th>Quantity</th>
        <th>Cost</th>
      </tr>
      </thead>

      <tbody>
    <% total = 0.0%>
      <% @invoice.invoice_items.each do |ii|%>
        <tr>
          <td><%= ii.item.upc %></td>
          <td><%= ii.quantity %></td>
          <td><%= ii.cost %></td>
          <td><% total += ii.cost %></td>
        </tr>
      <% end %>
      <tr>
        <td>Grand Total</td>
        <td></td>
        <td><%= total %></td>
      </tr>

      </tbody>


    </table>
    <!--<td><%= link_to 'Show', invoice_path %></td>-->
    <td><%= link_to 'Edit', edit_invoice_path(@invoice), :class => "btn btn-warning" %></td>
    <!-- <td><%= link_to 'Delete', invoice_path, method: :delete, data: {confirm: 'Are you sure?'} %></td> -->
    <%= link_to 'Print', print_path(:invoice => @invoice, format: "pdf"),  :class => "btn btn-primary"  %>
  </div>
</div>


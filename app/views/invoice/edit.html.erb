<div class="container">
  <h1>Edit Invoice</h1>
  <%= form_for :invoice,  url: invoice_index_path do |f| %>

      <% if @invoice.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@invoice.errors.count, "error") %> prohibited
              this invoice from being saved:
            </h2>
            <ul>
              <% @invoice.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= label_tag :start_date, "Date" %>
        <%= f.text_field :start_date, value: @invoice.start_date.strftime("%m-%d-%Y"), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :merchant, "Merchant" %>
        <%= f.select :merchant_id, Merchant.all.collect {|m| [m.merchant_name, m.id]}, include_blank: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :credit, "Credit" %>
        <%= f.text_field :credit, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :debit, "Debit" %>
        <%= f.text_field :debit, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :quantity, "Quantity" %>
        <%= f.text_field :quantity, class: "form-control" %>
      </div>


      <%= submit_tag "Submit", class: "btn btn-default" %>

  <% end %>

</div>
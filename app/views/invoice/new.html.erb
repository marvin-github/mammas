<div class="container">
<h1>Create Invoice</h1>
<%= form_for :invoice,  html: {id: 'invoice_new'}, url: invoice_index_path do |f| %>

    <% if @invoice.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@invoice.errors.count, "error") %> prohibited
            this invoice from being saved:
          </h2>
          <ul>
            <% @invoice.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

      <div class="form-group">
        <%= label_tag :merchant, "Merchant" %>
        <% if @account_type == '0' %>
          <%= f.select :merchant_id, Merchant.where('account_type = 0').collect {|m| [m.merchant_name + '-' + m.store_number, m.id]}, include_blank: true, class: "form-control" %>
        <% end %>
        <% if @account_type == '1' %>
          <%= f.select :merchant_id, Merchant.where('account_type = 1').collect {|m| [m.merchant_name + '-' + m.store_number, m.id]}, include_blank: true, class: "form-control" %>
        <% end %>
        <% if @account_type == '7' %>
            <%= f.select :merchant_id, Merchant.where('account_type = 0').collect {|m| [m.merchant_name + '-' + m.store_number, m.id]}, include_blank: true, class: "form-control" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= label_tag :start_date, "Date" %>
        <%= f.text_field :start_date, class: "form-control", value: "#{Time.now.strftime("%Y-%m-%d")}", readonly: "readonly" %>
      </div>




      <div class="form-group">
        <%= label_tag :description, "Description" %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="table-responsive", class="table table-striped">
        <table class="table">

          <% @item.each do |i| %>
              <tr>
                <td><%= check_box_tag 'selections[]', i.id, false %></td>
                <td><%= label_tag :item, i.upc %></td>
                <td><%= text_field_tag "quantity" + i.id.to_s,  nil, placeholder: "0", size: "3" %></td>
              </tr>
          <% end %>
        </table>

      </div>
      <%= submit_tag "Submit", class: "btn btn-primary" %>
<br><br>
<% end %>

</div>
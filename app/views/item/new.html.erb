<div class="container">
<h1>Create Product</h1>
<%= form_for :item, url: item_index_path do |f| %>


      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@item.errors.count, "error") %> prohibited
            this item from being saved:
          </h2>
          <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

      <div class="form-group">
        <%= label_tag :description, "Description" %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :upc, "Upc" %>
        <%= f.text_field :upc, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :package_counts, "Package Counts" %>
        <%= f.text_field :package_counts, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :unit_cost, "Unit Cost" %>
        <%= f.text_field :unit_cost, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :case_cost, "Case Cost" %>
        <%= f.text_field :case_cost, placeholder: "0.00",class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :retail_cost, "Retail Cost" %>
        <%= f.text_field :retail_cost, placeholder: "0.00", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :discount_amount, "Discount Amount" %>
        <%= f.text_field :discount_amount,  placeholder: "0.00", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :discount_start_date, "Discount Start Date" %>
        <%= f.text_field :discount_start_date, placeholder: "yyyy-mm-dd", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :discount_end_date, "Discount End Date" %>
        <%= f.text_field :discount_end_date, placeholder: "yyyy-mm-dd", class: "form-control" %>
      </div>



      <%= submit_tag "Submit", class: "btn btn-primary" %>

<% end %>
<br><br>

</div>
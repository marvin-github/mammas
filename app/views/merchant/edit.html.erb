<div class="container">
  <h1>Edit Merchant</h1>
  <%= form_for :merchant, url: merchant_path, method: :patch do |f| %>

      <% if @merchant.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@merchant.errors.count, "error") %> prohibited
              this merchant from being saved:
            </h2>
            <ul>
              <% @merchant.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= label_tag :merchant_name, "Name" %>
        <%= f.text_field :merchant_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :store_number, "Store Number" %>
        <%= f.text_field :store_number, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :address1, "Address1" %>
        <%= f.text_field :address1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :city, "City" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :state, "State" %>
        <%= f.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :zip, "Zip" %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :phone, "Phone" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :discount, "Discount" %>
        <%= f.select :discount, options_for_select([['yes', 'yes'], ['no', 'no']],@merchant.discount), class: "form-control" %>
      </div>

      <% type = 'no' %>
      <% if @merchant.account_type == 1%>
        <% type = 'yes' %>
      <% end %>
      <% puts type %>
      <div class="form-group">
        <%= label_tag :account_type, "Account Type" %>
        <%= f.select :account_type, options_for_select([['Mimick Distributing', 1], ["Mi Mama's", 0], ["Colby Ridge", 9]], @merchant.account_type), class: "form-control" %>
      </div>

      <%= submit_tag "Submit", class: "btn btn-primary" %>

  <% end %>
  <br><br>
</div>
<div class="container">
  <h1>Edit Merchant</h1>
  <%= form_for :merchant,   url: merchant_path, method: :patch do |f| %>

      <% if @merchant.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@merchant.errors.count, "error") %> prohibited
              this merchant from being saved:
            </h2>
            <ul>
              <% @merchant.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= label_tag :merchant_name, "Name" %>
        <%= f.text_field :merchant_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :address1, "Address1" %>
        <%= f.text_field :address1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :city, "City" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :state, "State" %>
        <%= f.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :zip, "Zip" %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :phone, "Phone" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :discount, "Discount" %>
        <%= f.text_field :discount, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :discount_start_date, "Discount Start Date" %>
        <% unless :discount_start_date.empty? %>
          <%= f.text_field :discount_start_date, placeholder: "yyyy-mm-dd", class: "form-control" %>
        <% else %>
            <%= f.text_field :discount_start_date.strftime("%Y-%m-%d"), class: "form-control" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= label_tag :discount_end_date, "Discount End Date" %>
        <% unless :discount_end_date.empty? %>
            <%= f.text_field :discount_end_date, placeholder: "yyyy-mm-dd", class: "form-control" %>
        <% else %>
            <%= f.text_field :discount_end_date.strftime("%Y-%m-%d"), class: "form-control" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= label_tag :cash_account, "Cash Account" %>
        <%= f.select :cash_account, options_for_select([['yes', 1], ['no', 0]],0), class: "form-control" %>
      </div>

      <%= submit_tag "Submit", class: "btn btn-primary" %>

  <% end %>

</div>
<div class="container">
<h1>Create Merchant</h1>
<%= form_for :merchant,  url: merchant_index_path do |f| %>

    <% if @merchant.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@merchant.errors.count, "error") %> prohibited
            this merchant from being saved:
          </h2>
          <ul>
            <% @merchant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

      <div class="form-group">
        <%= label_tag :merchant_name, "Name" %>
        <%= f.text_field :merchant_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :address1, "Address1" %>
        <%= f.text_field :address1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :address2, "Address2" %>
        <%= f.text_field :address2, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :city, "City" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :state, "State" %>
        <%= f.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :zip, "Zip" %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :email, "Email" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :phone, "Phone" %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>


      <%= submit_tag "Submit", class: "btn btn-primary" %>

<% end %>

</div>